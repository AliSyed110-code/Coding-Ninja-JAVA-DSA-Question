package Recursion_2;

public class Staircase {

	public static int staircase(int n){
		if ( n == 0) {
			return 0 ; 
		}
		int count = 0; 
		if(n - 1 == n) {
		count++;	
		}
		int smallAns = staircase( n + count);
		return smallAns ;
	}
	
	public static void main(String[] args) {
		 
		int n =  4;
		System.out.println(staircase(n));
		
	}

}
